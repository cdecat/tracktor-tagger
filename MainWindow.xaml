<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TracktorTagger" x:Class="TracktorTagger.MainWindow"
        Title="Traktor Tagger" Height="600" Width="800">
    <Grid>




        <Menu Height="23" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open Traktor Collection" Click="openMenu_Click"/>
                <MenuItem Header="Save Traktor Collection" Click="saveMenu_Click"/>
                <MenuItem Header="Exit"/>

            </MenuItem>
            <MenuItem Header="Settings"/>

        </Menu>


        <GroupBox Header="Traktor Collection" Margin="10,28,294,309">
            <DataGrid x:Name="traktorColDataGrid" Margin="10"/>
        </GroupBox>



        <GroupBox Header="Track Search&#x9;" Margin="10,0,294,10" Height="294" VerticalAlignment="Bottom">
            <Grid>




                <DataGrid AutoGenerateColumns="True" Margin="10,38,10,0" x:Name="searchResultDataGrid" Height="230" VerticalAlignment="Top"/>
                <TextBox Height="23" Margin="10,10,179,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" x:Name="searchTextBox"/>
                <ComboBox Margin="0,10,10,0" VerticalAlignment="Top" SelectedIndex="0" HorizontalAlignment="Right" Width="84">
                    <ComboBoxItem Content="Beatport"/>
                    <ComboBoxItem Content="Discogs"/>
                </ComboBox>
                <Button Content="Search" Margin="0,10,99,0" VerticalAlignment="Top" x:Name="searchButton" Click="searchButton_Click" HorizontalAlignment="Right" Width="75"/>

            </Grid>



        </GroupBox>


        <local:TrackProperties Margin="0,28,10,10" HorizontalAlignment="Right" Width="279"/>


    </Grid>
</Window>
